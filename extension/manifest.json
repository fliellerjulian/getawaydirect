{
  "manifest_version": 3,
  "name": "Getaway.Direct: Find Direct Host Links for Airbnb Listings",
  "version": "1.3.2",
  "description": "Save $35/night on your next stay! Connect directly with property hosts",
  "permissions": [],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://api.getaway.direct/*",
    "http://127.0.0.1:5000/*"
  ],
  "icons": {
    "16": "assets/logos/logo-16.png",
    "48": "assets/logos/logo-48.png",
    "128": "assets/logos/logo-128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.airbnb.com/*",
        "https://www.airbnb.de/*",
        "https://www.airbnb.co.uk/*",
        "https://www.airbnb.ca/*",
        "https://www.airbnb.fr/*",
        "https://www.airbnb.it/*",
        "https://www.airbnb.es/*"
      ],
      "js": ["constants.js", "utils.js", "content.js", "list.js"],
      "css": ["tooltip.css", "skeleton.css", "components.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/logo.png", "assets/info.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
